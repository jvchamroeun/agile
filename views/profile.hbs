<body>

    <div class="defcontainer">
        <div class="defheader">

        </div>
        
        <div class="defmenu">
            <div class='list-group'>
                <a href="logout" class="list-group-item">Logout</a>
                <a href="profile" class="list-group-item list-group-item-info">Profile</a>
                <a href="trading-success" class="list-group-item">Trading</a>
                <a href="admin-success" class="list-group-item">Admin Panel</a>
            </div>
        </div>
        
        <div class="defcontent">
            <br>
            <div class='chfont container'>

                <form action ="/profile" method="POST">
                <p>{{title}}</p>

                    <br>

                <img src="../images/default.png" alt="ProfilePicture" style="width:100px">
                  <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" class="form-control" name='firstname' value={{firstname}} id="firstname" placeholder="First name must be 3-30 characters long and must only contain letters.">
                  </div>
                  <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text" class="form-control" name='lastname' value={{lastname}} id="lastname" placeholder="Last name must be 3-30 characters long and must only contain letters.">
                  </div>
                    <input type="submit" class="btn btn-secondary" value="Update Profile">
                </form>
                <br><br>

                <form action ="/change-password" method="POST">
                    <input type="submit" class="btn btn-secondary" value="Change Password">
                </form>

                <div id='submission'></div>
                
            </div>

        </div>
